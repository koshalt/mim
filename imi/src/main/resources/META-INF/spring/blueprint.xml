<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:osgi="http://www.eclipse.org/gemini/blueprint/schema/blueprint"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.eclipse.org/gemini/blueprint/schema/blueprint
    http://www.eclipse.org/gemini/blueprint/schema/blueprint/gemini-blueprint.xsd">

    <import resource="classpath*:META-INF/motech/*.xml" />

    <osgi:service ref="targetFileService" interface="org.motechproject.nms.imi.service.TargetFileService" />

    <osgi:service ref="cdrFileService" interface="org.motechproject.nms.imi.service.CdrFileService" />

    <osgi:service ref="settingsService" interface="org.motechproject.nms.imi.service.SettingsService" />

    <osgi:service ref="reschedulerService" interface="org.motechproject.nms.imi.service.ReschedulerService" />



    <osgi:reference id="subscriptionDataService"
                    interface="org.motechproject.nms.kilkari.repository.SubscriptionDataService" />

    <osgi:reference id="subscriptionPackDataService"
                    interface="org.motechproject.nms.kilkari.repository.SubscriptionPackDataService" />

    <osgi:reference id="subscriberDataService"
                    interface="org.motechproject.nms.kilkari.repository.SubscriberDataService" />

    <osgi:reference id="languageDataService"
                    interface="org.motechproject.nms.region.language.repository.LanguageDataService" />

    <osgi:reference id="callRetryDataService"
                    interface="org.motechproject.nms.imi.repository.CallRetryDataService" />

    <osgi:reference id="callDetailRecordDataService"
                    interface="org.motechproject.nms.imi.repository.CallDetailRecordDataService" />

    <osgi:reference id="auditDataService"
                    interface="org.motechproject.nms.imi.repository.AuditDataService" />

    <osgi:reference id="schedulerService"
                    interface="org.motechproject.scheduler.service.MotechSchedulerService" />

    <osgi:reference id="alertsService" interface="org.motechproject.alerts.contract.AlertService" />

    <osgi:reference id="eventRelay" interface="org.motechproject.event.listener.EventRelay"/>

</beans>
